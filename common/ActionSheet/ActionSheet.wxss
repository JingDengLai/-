.sheetContianer{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .4);
    position: fixed;
    bottom: 0;
    z-index: 999;
}

.content{
    background-color: #ffffff;
    position: fixed;
    width: 100%;
    bottom: -200px;
    z-index: 1000;
    transition: all 500ms;
    border-radius: 10px 10px 0 0;
}


.exit-box{
    background-color: rgb(247, 247, 247);
    padding-top: 15rpx;
}
.exit-box .exit-content{
    background-color: #ffffff;
    padding: 20rpx 0;
    text-align: center;
    font-size: 30rpx;
}
